  "scoring": {
    "pillars": ["S", "T", "H", "C", "U"],
    "weights": { "S": 0.25, "T": 0.2, "H": 0.2, "C": 0.2, "U": 0.15 },
    "thresholdsGlobal": {
      "minTruthT": 70,
      "minIntegrityK": 0.6,
      "minLightScore": 60
    },
    "lightScoreFormula": "0.25*S + 0.20*T + 0.20*H + 0.20*C + 0.15*U",
    "multipliers": {
      "Q": { "min": 0.5, "max": 3.0 },
      "I": { "min": 0.5, "max": 5.0 },
      "K": { "min": 0.0, "max": 1.0 },
      "Ux": { "min": 0.5, "max": 2.5 }
    },
    "multiplierCaps": {
      "maxQIProduct": 10.0,
      "maxAmountAtomicPerAction": "500000000000000000000000",
      "enforceTierUxMax": true
    }
  },

  "unity": {
    "unityScoreSignals": ["collaboration", "beneficiaryConfirmed", "communityEndorsement", "bridgeValue", "conflictResolution"],
    "unityScoreWeightsMVP": {
      "collaboration": 0.4,
      "beneficiaryConfirmed": 0.3,
      "communityEndorsement": 0.2,
      "bridgeValue": 0.1,
      "conflictResolution": 0.0
    },
    "unityMultiplierMapping": [
      { "minU": 0, "maxU": 49, "Ux": 0.5 },
      { "minU": 50, "maxU": 69, "Ux": 1.0 },
      { "minU": 70, "maxU": 84, "Ux": 1.5 },
      { "minU": 85, "maxU": 94, "Ux": 2.0 },
      { "minU": 95, "maxU": 100, "Ux": 2.3 }
    ],
    "unityBonuses": [
      { "if": { "partnerAttested": true }, "addUx": 0.3, "capUx": 2.5 },
      { "if": { "beneficiaryConfirmed": true }, "addUx": 0.2, "capUx": 2.5 },
      { "if": { "witnessCountGte": 3 }, "addUx": 0.2, "capUx": 2.5 }
    ]
  },

  "integrity": {
    "antiSybil": {
      "minAntiSybilScore": 0.6,
      "dropKTo": 0.0,
      "whenBelowMin": "REJECT"
    },
    "fraudPenalties": {
      "BOT": { "setK": 0.0, "action": "REJECT", "banDays": 30 },
      "SYBIL": { "setK": 0.0, "action": "REJECT", "banDays": 60 },
      "COLLUSION": { "setK": 0.2, "action": "REVIEW", "banDays": 14 },
      "SPAM": { "setK": 0.3, "action": "REJECT", "banDays": 7 },
      "WASH": { "setK": 0.0, "action": "REVIEW", "banDays": 30 }
    },
    "stakeForTrust": {
      "enabled": true,
      "token": "CAMLY",
      "boostMax": 1.2,
      "behaviorBoostMax": 1.1,
      "note": "Stake boosts K slightly; never makes pay-to-win."
    }
  },

  "minting": {
    "formula": "amountAtomic = baseRewardAtomic * Q * I * K * Ux",
    "rounding": "floor",
    "minMintAmountAtomic": "1000000000000000000",
    "maxMintAmountAtomicPerAction": "500000000000000000000000",
    "decisionRules": {
      "ifFailThresholds": "REJECT",
      "ifFraudReview": "REVIEW_HOLD",
      "ifAuditTriggered": "REVIEW_HOLD",
      "ifMissingRequiredAttestation": "REVIEW_HOLD",
      "ifPass": "AUTHORIZE"
    }
  },

  "audit": {
    "enabled": true,
    "trigger": {
      "amountAtomicGte": "5000000000000000000000",
      "orTopPercentPerEpoch": 1
    },
    "sampling": {
      "randomPercentForLargeMints": 10,
      "randomPercentForAllMints": 1
    },
    "actionOnTrigger": "REVIEW_HOLD",
    "reviewSlaSec": 86400
  },

  "attestation": {
    "requiredPlatforms": ["FUN_CHARITY", "FUN_EARTH", "FUN_FARM", "FUN_INVEST"],
    "requiredActionTypes": {
      "FUN_CHARITY": ["DONATE", "VOLUNTEER", "CAMPAIGN_DELIVERY_PROOF", "IMPACT_REPORT"],
      "FUN_EARTH": ["TREE_PLANT", "CLEANUP_EVENT", "PARTNER_VERIFIED_REPORT"],
      "FUN_FARM": ["FARM_DELIVERY", "QUALITY_CERT", "WASTE_REDUCTION"],
      "FUN_INVEST": ["DUE_DILIGENCE_REPORT", "MENTOR_STARTUP", "IMPACT_KPI_REVIEW"]
    },
    "attestorRegistryMode": "ALLOWLIST",
    "verify": {
      "type": "EIP712_OR_ED25519",
      "minWitnessCountForUxAbove": {
        "thresholdUx": 1.5,
        "witnessCount": 1
      }
    }
  },

  "mintBuffer": {
    "enabled": true,
    "bufferPercentOfPlatformPool": 15,
    "bufferPurpose": ["lateVerification", "disputes", "partnerDelays"],
    "releaseRule": "endOfEpochOrAfterReview"
  },

  "locking": {
    "enabled": true,
    "softLockLargeMints": true,
    "triggerAmountAtomicGte": "5000000000000000000000",
    "lock": {
      "percentLocked": 30,
      "durationSec": 604800,
      "mode": "WALLET_LAYER",
      "note": "MVP wallet-layer lock; optionally allow spend-in-ecosystem while locked."
    }
  },

  "engineGating": {
    "accountAgeDaysForHigherCaps": 7,
    "newAccount": {
      "maxUx": 1.0,
      "capTier": 0
    },
    "progressiveCaps": true
  },

  "tiers": {
    "definition": "Tier based on verified history + integrity + average light score.",
    "tierRulesMVP": [
      { "tier": 0, "minVerifiedActions": 0, "minAvgLightScore": 0, "minAvgK": 0.0, "maxUx": 1.0 },
      { "tier": 1, "minVerifiedActions": 10, "minAvgLightScore": 65, "minAvgK": 0.7, "maxUx": 1.5 },
